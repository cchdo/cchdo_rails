<% if params[:expanded] -%>
  <a href="/<%= @query_with_sort_link -%>">Condensed View</a>
<% else -%>
  <a href="/<%= @query_with_sort_link -%>&expanded=true">Expanded View</a>
<% end -%>
<div id="search_results">
  <% unless @cruises.blank? -%>
	  <% if params[:expanded] -%>
      <%= render :partial => 'search/full_results' -%>
    <% else %>
      <%= render :partial => 'search/short_results' -%>
    <% end %>
  <% else -%>
    <h3>No results for <%= @query %></h3>
  <% end -%>
</div>
