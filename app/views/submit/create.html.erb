<% if @submission %>
<table class="conf_table">
  <tr class="table_header">
    <td align="center"><b class="submit_bold"> File Submitted </b></td><td></td>
  </tr>
  <tr><td></td><td></td></tr>
  <tr>
    <td>File:</td><td align="left"><%= @submission.name  %></td>
  </tr>
  <tr>
    <td>Status:</td><td align="left"><%= params[:submission][:public] %></td>
  </tr>
  <tr>
    <td>Action:</td><td align="left"> <% if @submission %>  <% if @submission.action %> <%= @submission.action %> <% end %> <% end %></td>
  </tr>
  <tr>
    <td>ExpoCode:</td><td align="left"><%= params[:submission][:ExpoCode] %></td>
  </tr>
  <tr>
    <td>Line:</td><td align="left"><%= params[:submission][:Line] %></td>
  </tr>
  <tr>
    <td>Cruise Date:</td><td align="left"><%= @submission.cruise_date %></td>
  </tr>
  <tr>
    <td>Name:</td><td align="left"><%= params[:submission][:name] %></td>
  </tr>
  <tr>  
    <td>Institution:</td><td align="left"><%= params[:submission][:institute] %></td>
  </tr>
  <tr>
    <td>Country:</td><td align="left"><%= params[:submission][:Country] %></td>
  </tr>
  <tr>
    <td colspan="2">Response sent to:<br><%= params[:submission][:email] %></td>
  </tr>
</table>
<% else %>
<p>There was an error with your submission.  Please contact the administrator: fieldsjustin@gmail.com</p>
<% end %>
